{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*",
      ],
      "@/*": [
        "./*",
      ],
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/jest",
    ],
  },
  "include": [
    "./src/**/*",
  ],
}
